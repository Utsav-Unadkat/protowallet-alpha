{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "lib": ["ESNext"],
      "outDir": "./dist",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "strictNullChecks": false,
      "strictFunctionTypes": true,
      "declaration": true,
      "resolveJsonModule": true,
      "rootDir": "src",
      "baseUrl": ".",
      "skipLibCheck": true,
      "skipDefaultLibCheck": true,
      "noUnusedLocals": true,
    },
    "include": [
        "./src/**/*"
    ]
  }

